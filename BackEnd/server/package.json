{
  "name": "eduflow-server",
  "version": "1.0.0",
  "description": "Backend server for EduFlow online learning platform",
  "main": "src/index.js",
  "scripts": {
    "start": "set NODE_ENV=production&& node src/index.js",
    "dev": "set NODE_ENV=development&& nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js --detectOpenHandles --forceExit",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.js --testPathPattern='(test/unit|__tests__/unit)'",
    "test:integration": "cross-env NODE_ENV=test jest --config jest.config.js --testPathPattern='(test/integration|__tests__/integration)' --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --config jest.config.js",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --config jest.config.js",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --config jest.config.js --detectOpenHandles --forceExit",
    "test:approval": "cross-env NODE_ENV=test jest test/achievement.approval.test.js --runInBand --detectOpenHandles --forceExit",
    "test:docker": "node test/runTestsWithDocker.js",
    "test:windows": "powershell -ExecutionPolicy Bypass -File .\\test.ps1",
    "test:setup": "node test/setupTestDB.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json}\"",
    "seed:admin": "cross-env NODE_ENV=development node src/seeders/adminSeeder.js",
    "docker:build": "docker build -t eduflow-server .",
    "docker:run": "docker run -p 5000:5000 eduflow-server"
  },
  "keywords": [
    "education",
    "elearning",
    "mern",
    "mongodb",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-pdf": "^3.0.1",
    "http-status-codes": "^2.2.0",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.11",
    "pdfkit": "^0.14.0",
    "puppeteer": "^24.22.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
