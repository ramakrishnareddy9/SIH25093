<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.student.name %> - Portfolio</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
    }
    .header {
      text-align: center;
      margin-bottom: 30px;
      border-bottom: 2px solid #eee;
      padding-bottom: 20px;
    }
    .header h1 {
      margin: 0;
      color: #2c3e50;
    }
    .header p {
      margin: 5px 0 0;
      color: #7f8c8d;
    }
    .section {
      margin-bottom: 30px;
    }
    .section h2 {
      color: #2c3e50;
      border-bottom: 1px solid #eee;
      padding-bottom: 5px;
    }
    .education-item, .achievement-item {
      margin-bottom: 15px;
      padding-bottom: 15px;
      border-bottom: 1px dashed #eee;
    }
    .education-item:last-child, .achievement-item:last-child {
      border-bottom: none;
    }
    .date {
      color: #7f8c8d;
      font-style: italic;
    }
    .skills {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
    }
    .skill-tag {
      background-color: #e0f7fa;
      color: #00838f;
      padding: 3px 10px;
      border-radius: 15px;
      font-size: 0.9em;
    }
  </style>
</head>
<body>
  <div class="header">
    <h1><%= data.student.name %></h1>
    <p><%= data.student.email %></p>
    <% if (data.student.bio) { %>
      <p><%= data.student.bio %></p>
    <% } %>
  </div>

  <% if (data.student.skills && data.student.skills.length > 0) { %>
    <div class="section">
      <h2>Skills</h2>
      <div class="skills">
        <% data.student.skills.forEach(skill => { %>
          <span class="skill-tag"><%= skill %></span>
        <% }); %>
      </div>
    </div>
  <% } %>

  <% if (data.education && data.education.length > 0) { %>
    <div class="section">
      <h2>Education</h2>
      <% data.education.forEach(edu => { %>
        <div class="education-item">
          <h3><%= edu.degree %></h3>
          <p><strong><%= edu.institution %></strong></p>
          <p class="date">
            <%= new Date(edu.startDate).getFullYear() %> - 
            <%= edu.endDate ? new Date(edu.endDate).getFullYear() : 'Present' %>
            <% if (edu.fieldOfStudy) { %>
              | <%= edu.fieldOfStudy %>
            <% } %>
            <% if (edu.gpa) { %>
              | GPA: <%= edu.gpa %>
            <% } %>
          </p>
          <% if (edu.description) { %>
            <p><%= edu.description %></p>
          <% } %>
        </div>
      <% }); %>
    </div>
  <% } %>

  <% if (data.achievements && data.achievements.length > 0) { %>
    <div class="section">
      <h2>Achievements</h2>
      <% data.achievements.forEach(achievement => { %>
        <div class="achievement-item">
          <h3><%= achievement.title %></h3>
          <% if (achievement.issuer) { %>
            <p><strong><%= achievement.issuer %></strong></p>
          <% } %>
          <p class="date">
            <%= new Date(achievement.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long' }) %>
          </p>
          <% if (achievement.description) { %>
            <p><%= achievement.description %></p>
          <% } %>
        </div>
      <% }); %>
    </div>
  <% } %>
</body>
</html>
