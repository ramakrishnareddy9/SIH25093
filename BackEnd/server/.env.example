# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/eduflow
MONGODB_URI_TEST=mongodb://localhost:27017/eduflow_test

# JWT Authentication
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m
JWT_VERIFY_EMAIL_EXPIRATION=24h
JWT_ISSUER=smart-student-hub

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM='Smart Student Hub <noreply@smartstudenthub.com>'
SUPPORT_EMAIL=support@smartstudenthub.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Frontend URLs
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

# Security
CORS_ORIGIN=http://localhost:3000
XSS_PROTECTION=true
NO_CACHE=true

# Logging
LOG_LEVEL=info

# Session
SESSION_SECRET=your_session_secret_here

# API Documentation
API_DOCS_PATH=/api-docs
